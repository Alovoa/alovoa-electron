{
  "name": "alovoa-electron",
  "version": "1.0.0",
  "description": "Alovoa",
  "main": "dist/index.js",
  "scripts": {
    "dist": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run dist && electron .",
    "build": "npm run dist && electron-builder"
  },
  "author": "Nho Quy Dinh",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^22.10.3",
    "typescript": "^4.8.4"
  },
  "build": {
    "appId": "com.alovoa.alovoa-electron",
    "directories": {
      "output": "./build"
    },
    "files": [
      "dist",
      "package.json"
    ],
    "extraFiles": [
      "data"
    ],
    "win": {
      "icon": "./data/icons/icon.png"
    },
    "mac": {
      "icon": "./data/icons/icon.png"
    },
    "linux": {
      "icon": "./data/icons/icon.png"
    }
  }
}
